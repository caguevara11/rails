%nav.page.header.d-flex.align-items-center.justify-content-between.px-4.shadow.navbar.navbar-expand-lg{ :style => "height: 10vh; background-color: #9EC5FE;"  }
  %a.navbar-brand
    %h2.text-dark.mb-0
      =t('activerecord.modules.dashboard.management')
%div.container-fluid{ :style => "height: 90vh" }
  .div.h-100.row.justify-content-start
    .div.offset-1.col-10.offset-sm-2.col-sm-8.offset-md-3.col-md-6.offset-lg-4.col-lg-4.p-4
      %p{:style => "color: red"}= alert
      = form_with model: @user, url: sign_in_path do |f|
        .form-group.ml-4.mr-4
          = f.label t('activerecord.attributes.user.username'), class: "form-label required"
          = f.text_field :username, autofocus: true, class: "form-control"
        .form-group.ml-4.mr-4
          = f.label t('activerecord.attributes.user.password'), class: "form-label required"
          = f.password_field :password, class: "form-control"
        .row 
          .offset-4.col-4.offset-sm-3.col-sm-6.offset-md-2.col-md-8.offset-lg-3.col-lg-6
            = button_tag t('application.sign_in'), class: "btn btn-outline-primary btn-block overflow-hidden", style:"white-space: normal; word-wrap: break-word;"