= form_for @user, validate: true do |f|
  - if  @user.errors.any?
    %div{:style => 'color: red'}
      %h2
        = t('application.can_not_be_saved', model: t('activerecord.modules.users.one'))
        - if @user.errors.count == 1 
          = "#{@user.errors.count} #{t('application.error')}"
        - else 
          = "#{@user.errors.count} #{t('application.errors')}"
      %ul
        -  @user.errors.each do |error|
          %li= error.full_message
  .form-group.ml-4.mr-4
    = f.label :username, class: "form-label required"
    = f.text_field :username, autofocus: true, class: "form-control"
  .form-group.ml-4.mr-4
    = f.label :password, class: "form-label required"
    = f.text_field :password, class: "form-control"
  .form-group.ml-4.mr-4
    = f.label :password_confirmation, class: "form-label required"
    = f.text_field :password_confirmation, class: "form-control"
  .form-group.ml-4.mr-4
    = f.label :usertype, class: ' form-label required'
    = f.select(:usertype, options_for_select(usertypes, @user.usertype), 
                      {prompt: "Seleccione"}, class:'form-control')

  .row 
    .offset-3.col-3 
      = link_to t('application.back'), users_path, class: "btn btn-secondary btn-block"
    .col-3  
      = button_tag t('application.save'), class: "btn btn-outline-success btn-block", 'data-disable-with': t('application.saving')